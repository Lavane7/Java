class Solution {
    public int removeElement(int[] nums, int val) {
        int k = 0; // Pointer for the position to insert elements not equal to val

        for (int i = 0; i < nums.length; i++) {
            if (nums[i] != val) { // Keep the element if it's not the value to remove
                nums[k] = nums[i];
                k++;
            }
        }

        return k; // Number of elements not equal to val
    }
}
